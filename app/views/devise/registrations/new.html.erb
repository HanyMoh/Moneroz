<div class="login-form">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>SIGN UP</h3>

  <!-- < %= render "layouts/notice"%> -->
  <%= devise_error_messages! %>

  <div class="form-group">
    <label class="control-label">اسم المستخدم</label>
    <%= f.text_field :user_name, autofocus: true, placeholder: "User Name", autofocus: true, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <label class="control-label">الإيميل</label>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autofocus: true, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <label class="control-label">كلمة المرور
      <% if @minimum_password_length %>
      <em>(لا يقل عن<%= @minimum_password_length %> على الأقل)</em>
      <% end %>
    </label>
    <%= f.password_field :password, autocomplete: "off", placeholder:"Password", class: "form-control" %>
  </div>

  <div class="form-group">
    <label class="control-label">تأكيد كلمة المرور</label>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Password", class: "form-control" %>
  </div>

  <div class="form-group btn-container">
    <%= button_tag( :class => "btn btn-primary btn-block") do %>
      <i class="fa fa-sign-in fa-lg fa-fw"></i> تسجيل
    <% end %>
  </div>
<% end %>
</div>
