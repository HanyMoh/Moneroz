<% unless notice.blank? %>
  <div class="alert alert-info alert-dismissable alert-fixed">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  </div>
  <% end %>
  <% unless alert.blank? %>
  <div class="alert alert-danger alert-dismissable alert-fixed">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  </div>
<% end %>
